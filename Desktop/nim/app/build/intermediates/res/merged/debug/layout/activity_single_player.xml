<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_single_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.sndo9.robert.nim.SinglePlayer">

    <Button
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="visible"
        android:id="@+id/buttonTres" />

    <Button
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        android:id="@+id/buttonDos" />

    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible"
        android:id="@+id/buttonUno" />

    <Button
        android:text="Confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        android:id="@+id/buttonConfirm" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:id="@+id/buttonCancel" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <ImageView
            android:layout_height="100dp"
            app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/stick1"
            android:visibility="invisible"
            android:layout_width="118dp" />

        <ImageView
            android:layout_height="100dp"
            app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/stick2"
            android:visibility="invisible"
            android:layout_width="118dp" />

        <ImageView
            android:layout_height="100dp"
            app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/stick3"
            android:visibility="invisible"
            android:layout_width="118dp" />

        <ImageView
            android:layout_height="100dp"
            app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/stick4"
            android:visibility="invisible"
            android:layout_width="118dp" />

        <ImageView
            android:layout_height="100dp"
            app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/stick5"
            android:visibility="invisible"
            android:layout_width="118dp" />

        <ImageView
            android:layout_height="100dp"
            app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/stick6"
            android:visibility="invisible"
            android:layout_width="118dp" />

        <ImageView
            android:layout_height="100dp"
            app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/stick7"
            android:visibility="invisible"
            android:layout_width="118dp" />

        <ImageView
            android:layout_height="100dp"
            app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/stick8"
            android:visibility="invisible"
            android:layout_width="118dp" />

        <ImageView
            android:layout_height="100dp"
            app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/stick9"
            android:visibility="invisible"
            android:layout_width="118dp" />

        <ImageView
            android:layout_height="100dp"
            app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/stick10"
            android:visibility="invisible"
            android:layout_width="118dp" />

        <ImageView
            android:layout_height="100dp"
            app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/stick11"
            android:visibility="invisible"
            android:layout_width="118dp" />

        <ImageView
            android:layout_height="100dp"
            app:srcCompat="@android:drawable/btn_dialog"
            android:layout_alignBottom="@+id/textView"
            android:layout_toLeftOf="@+id/textView"
            android:layout_toStartOf="@+id/textView"
            android:layout_marginRight="145dp"
            android:layout_marginEnd="145dp"
            android:layout_marginBottom="200dp"
            android:id="@+id/stick12"
            android:visibility="invisible"
            android:layout_width="118dp" />
    </GridLayout>

</RelativeLayout>
