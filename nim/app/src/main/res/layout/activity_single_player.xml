<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_single_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.sndo9.robert.nim.SinglePlayer">

    <TextView
        android:text="Number of turns: 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textNumOfTurns"
        android:layout_weight="1"
        android:textSize="20sp"
        android:textColor="@color/white"/>

    <Button
        android:text="@string/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:enabled="false"
        android:id="@+id/buttonConfirm" />

    <Button
        android:text="@string/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:enabled="false"
        android:id="@+id/buttonCancel" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/buttonInformation"
        android:layout_alignParentRight="true"
        android:background="@drawable/ibuttonwhitesmall"
        android:minHeight="48dip"
        android:minWidth="48dip" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Debug"
        android:id="@+id/debug"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/buttonInformation"
        android:textColor="@color/white"
        android:text="This is empyText"
        android:id="@+id/helpText" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="7"
        android:rowCount="3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@id/buttonConfirm"
        android:visibility="visible">

        <Space
            android:layout_columnWeight="0.10"
            android:layout_rowWeight="0.10"
            android:rowCount="1"
            android:columnCount="1"/>

        <Space
            android:layout_columnWeight="0.10"
            android:layout_rowWeight="0.10"
            android:rowCount="1"
            android:columnCount="2"/>

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/stick13"
            android:layout_columnWeight="0.10"
            android:layout_rowWeight="0.10"
            android:rowCount="1"
            android:columnCount="3"
            />

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/stick14"
            android:layout_columnWeight="0.10"
            android:layout_rowWeight="0.10"
            android:rowCount="1"
            android:columnCount="4"
            />

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/stick15"
            android:layout_columnWeight="0.10"
            android:layout_rowWeight="0.10"
            android:rowCount="1"
            android:columnCount="5"
            />

        <Space
            android:layout_columnWeight="0.10"
            android:layout_rowWeight="0.10"
            android:rowCount="1"
            android:columnCount="6"/>

        <Space
            android:layout_columnWeight="0.10"
            android:layout_rowWeight="0.10"
            android:rowCount="1"
            android:columnCount="7"/>

        <Space
            android:layout_columnWeight="0.10"
            android:layout_rowWeight="0.10"
            android:rowCount="2"
            android:columnCount="1"/>

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/stick22"
            android:layout_columnWeight="0.10"
            android:layout_rowWeight="0.10"
            android:rowCount="2"
            android:columnCount="2" />

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/stick23"
            android:layout_columnWeight="0.10"
            android:layout_rowWeight="0.10"
            android:rowCount="2"
            android:columnCount="3" />

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/stick24"
            android:layout_columnWeight="0.10"
            android:layout_rowWeight="0.10"
            android:rowCount="2"
            android:columnCount="4" />

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/stick25"
            android:layout_columnWeight="0.10"
            android:layout_rowWeight="0.10"
            android:rowCount="2"
            android:columnCount="5" />

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/stick26"
            android:layout_columnWeight="0.10"
            android:layout_rowWeight="0.10"
            android:rowCount="2"
            android:columnCount="6" />

        <Space
            android:layout_columnWeight="0.10"
            android:layout_rowWeight="0.10"
            android:rowCount="2"
            android:columnCount="7"/>

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/stick31"
            android:layout_columnWeight="0.10"
            android:layout_rowWeight="0.10"
            android:rowCount="3"
            android:columnCount="1" />

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/stick32"
            android:layout_columnWeight="0.10"
            android:layout_rowWeight="0.10"
            android:rowCount="3"
            android:columnCount="2" />

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/stick33"
            android:layout_columnWeight="0.10"
            android:layout_rowWeight="0.10"
            android:rowCount="3"
            android:columnCount="3" />

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/stick34"
            android:layout_columnWeight="0.10"
            android:layout_rowWeight="0.10"
            android:rowCount="3"
            android:columnCount="4" />

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/stick35"
            android:layout_columnWeight="0.10"
            android:layout_rowWeight="0.10"
            android:rowCount="3"
            android:columnCount="5"/>

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/stick36"
            android:layout_columnWeight="0.10"
            android:layout_rowWeight="0.10"
            android:rowCount="3"
            android:columnCount="6"/>

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/stick37"
            android:layout_columnWeight="0.10"
            android:layout_rowWeight="0.10"
            android:rowCount="3"
            android:columnCount="7"/>
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/container"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible">

    </LinearLayout>

</RelativeLayout>
